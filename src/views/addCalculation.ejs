<html>

<head>
  <%- include('../views/partials/links'); %>
    <link rel="stylesheet" href="/css/validation.css" />
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-primary navbar-light">
    <div class="container mt-1">
      <h2 class="text-white">PRODY</h2>
      <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse" data-target="#collapsenavbar">
        <span class="navbar-toggler-icon "></span>
      </button>
  
      <div class="collapse navbar-collapse text-center" id="collapsenavbar">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item px-2">
            <a href="/calculationSearch" class="nav-link text-white"> VIEW CALCULATION </a>
          </li>
          <li class="nav-item px-2">
            <a href="/companies" class="nav-link text-white"> HOME </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- page content -->
  <div class="container">

    <div class="d-flex justify-content-center">
      <form class="mt-3 col-md-6" id="addtrip" action="/calculation" method="post">

        <div class="form-group">
          <div class="container ">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" placeholder="Date">
          </div>
        </div>
        <div class="form-group">
          <div class="container ">
            <label for="labourInput">Labour Input</label>
            <input type="text" class="form-control" id="labourInput" name="labourInput" placeholder="Labour Input">
          </div>
        </div>
        <div class="form-group">
          <div class="container ">
            <label for="materialInput">Material Input</label>
            <input type="text" class="form-control" id="materialInput" name="materialInput" placeholder="Material Input">
          </div>
        </div>
        <div class="form-group">
          <div class="container ">
            <label for="capitalInput">Capital Input</label>
            <input type="text" class="form-control" id="capitalInput" name="capitalInput" placeholder="Capital Input">
          </div>
        </div>
        <div class="form-group">
          <div class="container ">
            <label for="energyInput">Energy Input</label>
            <input type="text" class="form-control" id="energyInput" name="energyInput" placeholder="Energy Input">
          </div>
        </div>
        <div class="form-group">
          <div class="container ">
            <label for="totalOutput">Total Output</label>
            <input type="text" class="form-control" id="totalOutput" name="totalOutput" placeholder="Total Output">
          </div>
        </div>
        <div class="form-group">
          <div class="container ">
            <input type="submit" class="btn btn-primary btn-info mt-2" value="SUBMIT">
            <button class="btn btn-danger mt-2 ml-2"><a href="/companies" class="text-light"> BACK </a></button>
          </div>
        </div>
      </form>
    </div>
  </div>


  <%- include('../views/partials/footer'); %>

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

</body>

</html>