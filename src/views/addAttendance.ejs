          <label for="text">Employees</label>
          <textarea class="form-control" id="employeeName" name="employeeName" rows="7"></textarea>
        </div>

        <div class="form-group"></div>
        <input type="submit" class="btn btn-primary btn-info mt-2" value="SUBMIT">
        <button class="btn btn-danger mt-2 ml-2"><a href="/companies" class="text-light"> CANCEL </a></button>
        <div class="mt-5"><b>Note: Please type comma separated names of present employees only.</b></div>
    </div>
    </form>
