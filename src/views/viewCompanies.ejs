<html>

<head>
  <link rel="stylesheet" href="/css/blogcss.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
  
  <nav class="navbar navbar-expand-lg bg-primary navbar-light">
    <div class="container mt-1">
      <h2 class="text-white">PRODY</h2>
      <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse" data-target="#collapsenavbar">
        <span class="navbar-toggler-icon "></span>
      </button>
  
      <div class="collapse navbar-collapse text-center" id="collapsenavbar">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item px-2">
            <a href="/attendancePage" class="nav-link text-white"> ATTENDANCE </a>
          </li>
          <li class="nav-item px-2">
            <a href="/calculationView" class="nav-link text-white"> CALCULATIONS </a>
          </li>
          <li class="nav-item px-2">
            <a href="/rawMaterialAddView" class="nav-link text-white"> MATERIAL </a>
          </li>
          <li class="nav-item px-2">
            <a href="/productionView" class="nav-link text-white"> PRODUCTION </a>
          </li>
          <li class="nav-item px-2">
            <a href="/week" class="nav-link text-white"> FORECASTING </a>
          </li>
          <li class="nav-item px-2">
            <a href="/profile" class="nav-link text-white"> PROFILE </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>



    <section class="pt-5 justify-content-center position-relative ">
      <div class="container">
        <div class="row justify-content-center">
          <% users.forEach(user=> { %>
            <div class="card">
              
              <img class="card-img-top" src="<%= user.photo %>">
              <div class="card-body">
                <p class="card-title">
                <b> Name: <%= user.name %> </b>
                </p>
                <p class="card-text">
                  State: <%= user.state %>
                </p>
                <div style="max-width: fit-content;">
                  <div class="d-flex justify-content-center">
                <a href="/company/<%= user._id %>" class="btn btn-primary btn-block">VIEW</a>
                </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </section>
     
</body>

</html>